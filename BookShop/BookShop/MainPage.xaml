<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookShop.MainPage" Visual="Material"
             NavigationPage.HasNavigationBar="False">

    <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="#2A2A2A">
        <Image Source="Logo.png" VerticalOptions="FillAndExpand" BackgroundColor="#2A2A2A">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="AuthorizationPage_Clicked"/>
            </Image.GestureRecognizers>
        </Image>
    </StackLayout>

</ContentPage>
